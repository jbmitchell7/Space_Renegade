#:kivy 2.1.0

<SpaceShip>:
    size: 30, 30
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: 'images/spaceship.png'

<SpaceAsteroid>:
    size: 100, 100
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: 'images/asteroid.png'

<SpaceAlien>:
    size: 40, 30
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: 'images/alien.png'

<SpaceLaser>:
    size: 5, 15
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            # color: 0,1,0,1

<SpaceGame>:
    ship: game_ship
    asteroid: game_asteroid
    alien: game_alien

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/space.jpg'

    Label:
        font_size: root.height / 15
        center_x: root.width / 10
        top: root.height / 5
        text: str(root.score)

    Label:
        font_size: root.height / 15
        center_x: root.width / 2
        top: root.height / 2
        text: str(root.message)

    SpaceShip:
        id: game_ship
        x: root.width / 2
        y: root.height / 4

    SpaceAsteroid
        id: game_asteroid
        x: root.width

    SpaceAlien
        id: game_alien
        x: root.width
