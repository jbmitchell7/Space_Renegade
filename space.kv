#:kivy 1.0.9

<SpaceShip>:
    size: 30, 30
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: 'images/spaceship.png'

<SpaceAsteroid>:
    size: 100, 100
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: 'images/asteroid.png'

<SpaceAlien>:
    size: 40, 30
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: 'images/alien.png'

<SpaceLaser>:
    size: 5, 15
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            # color: 0,1,0,1

<SpaceGame>:
    ship: game_ship
    asteroid: game_asteroid
    alien: game_alien

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/space.jpg'

    Label:
        font_size: root.height / 15
        center_x: root.width / 10
        top: root.height / 5
        text: str(root.score)

    # Button:
    #     font_size: root.height / 20
    #     width: self.texture_size[0] + dp(5)
    #     height: self.texture_size[1] + dp(5)
    #     center_x: root.width / 3.3
    #     top: root.height / 2
    #     text: str(root.message)
    #     background_color: 0, 0, 0, 0

    SpaceShip:
        id: game_ship
        x: root.width / 2
        y: root.height / 4

    SpaceAsteroid
        id: game_asteroid
        x: root.width

    SpaceAlien
        id: game_alien
        x: root.width
